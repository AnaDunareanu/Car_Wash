<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.sre.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Login" GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="usernameFieldLogin" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="passwordFieldLogin" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Text fx:id="loginMessage" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="but" onAction="#handleLoginAction" text="Login"/>
    </HBox>

    <Text id="title-text" text="Register" GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowIndex="8"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>

    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>

    <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="12">
    </ChoiceBox>

    <Text fx:id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="16"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="14">
        <Button fx:id="register" onAction="#handleRegisterAction" text="Register"/>
    </HBox>
</GridPane>
